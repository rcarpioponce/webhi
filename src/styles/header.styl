.header
  display flex
  flex-direction row
  width 100%
  padding-top 62px
  nav
    display flex
    flex-direction row
    padding-top 18px
    font-size 13.36px
    ul
      display flex
      flex-direction row
    li
      list-style none
      display flex
    a
      color $black
      border-left 7px solid $black
      height 30px
      text-align center
      padding-left 5px
      padding-right 115px
      max-width 50%
      display flex
      justify-content center
      align-items center
      transition color ease-in-out      
      &:hover
        color $amarillo
        border-color $amarillo
.linea_amarilla
  width 100%
  height 8px
  background-color $amarillo
  float left
  clear both
  position relative
#banner
  margin-top 40px
  text-align center
  max-width 100%
  img
    width 1060
    max-width 100%

@media (max-width:600px)
  .header
    padding-top 20px
    flex-direction column
    .right_header
      width 100%
    nav
     ul
       width 100%
       flex-direction column
       li
         width 100%
         margin-bottom 0
         text-align center
         a
           width 100%
           max-width 100%
           border 0
           color white
           text-align center
           background-color $black
           padding 0
           &:hover
            background-color $amarillo
            color $black         