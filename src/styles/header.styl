.header
  display flex
  flex-direction row
  width 100%
  padding-top 62px
  nav
    display flex
    flex-direction row
    padding-top 18px
    font-size 13.36px
    ul
      display flex
      flex-direction row
    li
      list-style none
      display flex
    a
      color $black
      border-left 7px solid $black
      height 30px
      text-align center
      padding-left 5px
      padding-right 115px
      max-width 50%
      display flex
      justify-content center
      align-items center      
      &:hover
        color $amarillo
        border-color $amarillo
.linea_amarilla
  width 100%
  height 8px
  background-color $amarillo
  float left
  clear both
  position relative
       
      