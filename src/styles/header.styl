.header
  display flex
  flex-direction row
  width 100%
  padding-top 62px
  .left_header 
    max-width 220px
  nav
    display flex
    flex-direction row
    padding-top 18px
    font-size 13.36px
    ul
      display flex
      flex-direction row
    li
      list-style none
      display flex
    a
      color $black
      border-left 7px solid $black
      height 30px
      text-align center
      padding-left 5px
      padding-right 115px
      max-width 50%
      display flex
      justify-content center
      align-items center
      transition color ease-in-out      
      &:hover
        color $amarillo
        border-color $amarillo
/*      &:last-child
        padding-right 0*/
#frase
  width 271px
  padding-top 40px
  padding-left 20px
  font-size 40px
  span
    clear both
    display block
    &.negro
      max-width 90%
      font-family 'ClanOT-NewsItalic'
      &.small
        font-size 14px
        font-family 'ClanOT-News'
    &.amarillo
      font-family 'ClanOT-Bold'
      color $amarillo
      padding-bottom 8px
      margin-bottom 8px
      border-bottom 8px solid $amarillo
      font-size 40px
.linea_amarilla
  width 100%
  height 8px
  background-color $amarillo
  float left
  clear both
  position relative
#banner
  margin-top 40px
  text-align center
  width 980px
  margin-left 124px
  max-width 100%
  img
    width 100%
    max-width 100%
    float right
.slogan
  display none
  font-family 'ClanOT-BoldItalic'
  font-size 32px
  color $black
  padding 20px 0 0 10px
  &.derecha
    text-align right
    padding-right 20px
    padding-top 20px
    padding-bottom 30px        
  .amarillo
    color $amarillo
    font-family 'ClanOT-Bold'
    padding-bottom 8px
    margin-bottom 8px
    border-bottom 8px solid $amarillo
    max-width 80%
    float right
    clear both
    position relative
  .subslogan
    font-size 12px
    font-family 'ClanOT-News'