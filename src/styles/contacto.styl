#contacto
  width 100%
  max-width 100%
  display flex
  flex-direction row
  justify-content space-around
  margin-top 60px
  margin-bottom 60px
  min-height 300px
  h2
    width 60%
    text-align center
    font-family 'ClanOT-Bold'
    font-style italic
    background-color $amarillo
    color $black
    padding 5px 0
    margin-bottom 20px
  .contenido
    font-size 12px
    p
      line-height 20px    
    i
      background-color $amarillo
      width 30px
      height 30px
      display inline-block
      font-size 24px
      text-align center
      line-height 30px
      margin-right 10px
    &:first-child
      border-right 2px solid $amarillo
      padding-right 20px